<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bratva Family</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/generalStyles.css" />
    <link rel="stylesheet" href="/styles/dashboard.css" />
  </head>
  <body>
    <header>
      <%- include('partials/nav', { user: user }) %>

      <div class="page_detials container">
        <p>Bratva Family</p>
        <h2>All Products</h2>
      </div>
    </header>

   
    <main class="container dashboard-wrapper">
      <div id="errorMessageFloat" class="width-100 ">
        <p class="error"></p>
        <span><i class="ri-close-line"></i></span>
      </div>
     
      <div class="thank-you-container box-bg">
        <i class="ri-checkbox-circle-line"></i>
        <h1>Order Successful</h1>
        <p>Thank you for your purchase!</p>
      
        <!-- Order Details Section -->
        <section class="box-bg thank-you-order_details">
          <div class="show-product-model-conten">
            <!-- Order Summary -->
            <div class="orderSummary-head">
              <h3 class="heading-4">
                <i class="ri-shopping-cart-2-line"></i>
                Order Details
              </h3>
            </div>
      
            <div class="orderSummary-body">
              <div class="orderSummary-box">
                <h4>Nom</h4>
                <p class="productName"><%= order.product.name %></p>
              </div>
              <div class="orderSummary-box">
                <h4>Description d'activité</h4>
                <p class="productDescription"><%= order.product.description %></p>
              </div>
              <div class="orderSummary-box">
                <h4>FORME</h4>
                <p class="productType"><%= order.product.type %></p>
              </div>
              <div class="orderSummary-box">
                <h4>Capital social</h4>
                <p class="productCapitalSocial"><%= order.product.socialCapital %></p>
              </div>
              <div class="orderSummary-box">
                <h4>Total Paid</h4>
                <p class="productPrice"><%= order.totalAmount %>€</p>
              </div>
              <div class="orderSummary-box">
                <h4>Purchase Date</h4>
                <p class="purchaseDate">  <%= new Date(order.purchaseDate).toLocaleDateString('en-GB') %></p>
              </div>
            </div>
          </div>
        </section>
      



        
    <!-- Download Section -->
    <div class="download_container">
      <p>Your purchased banks are listed below. Click to download. <i class="ri-arrow-down-line"></i></p>
      
      <% if (order.purchasedBanks.length > 0) { %>
        <table class="download-table">
          <thead>
            <tr>
              <th>Bank Name</th>
              <th>Price</th>
              <th class="width-300">Download</th>
            </tr>
          </thead>
          <tbody>
            <% order.purchasedBanks.forEach(bank => { %>
              <tr>
                <td><%= bank.name %></td>
                <td><%= bank.price %>€</td>
                <td class="td-flexEnd width-300">
                  <a href="/download/<%= order.orderId %>/<%= bank._id %>" class="btn-black btn">Download</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="error">No banks found for this purchase. Please contact support.</p>
      <% } %>
    </div>
    
      </div>
      

    </main>

      <!-- footer -->
      <%- include('partials/footer') %>

      <!--End  footer -->

    <script src="/js/base.js"></script>
  </body>
</html>
