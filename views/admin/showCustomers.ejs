<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bratva Family</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/generalStyles.css" />
    <link rel="stylesheet" href="/styles/dashboard.css" />
  </head>
  <body>
    <header>
      <%- include('../partials/admin_nav', { user: user }) %>

      <div class="page_detials container">
        <p>Bratva Family</p>
        <h2>All Users</h2>
      </div>
    </header>

    <!-- View customers --- see orders,  -->
    <!-- cusotmer usermane, customer total orders --= when clicked on it can see all orders in detail -->
    <!-- View Products -- delete product , update product -->
    <!-- product -->
    <!--  -->
    <!-- Main dashboard -->
    <main class="container dashboard-wrapper">
      <div id="errorMessageFloat" class="width-100">
        <p class="error"></p>
        <span><i class="ri-close-line"></i></span>
      </div>
      <div class="dashboard_top">
        <div class="dashboard_top-left">

          <div class="box-bg chart-box-container">
            <h4 class="heading-4 pad-22">
              clients <br />
              <span class="box-count"> <%= customers.length%> </span>
            </h4>
          </div>
          <div class="box-bg">
            <h4 class="heading-4"></h4>
          </div>
        </div>

        <div class="box-bg admin-addProduct-box">
          <h4 class="heading-4">utilisateurs <br /></h4>
          <a href="/admin/users">
            <button class="btn btn-black">
              <i class="ri-user-unfollow-line"></i> Voir les utilisateurs
            </button>
          </a>
          <div class="bg-icon">
            <i class="ri-user-shared-line"></i>
          </div>
        </div>
      </div>

      <div class="users-dashboard_bottom container box-bg">
        <div class="users_wrapper">
          <div class="users_top">
            <p>S.no</p>
            <p>Usermane</p>
            <p>telegram</p>
            <p>Joined</p>
            <p>Total orders</p>
            <p>View Orders</p>
            <!-- <p>view all orders</p> -->
          </div>
          <div class="user-boxes">
            <% for(let [index, customer] of customers.entries()) {%>
            <a href="/orders/<%= customer._id %>">
              <div class="user-box">
                <p><%= index + 1 %></p>
                <h4 class=""><%= customer.username %></h4>
                <p class="telegram"><%= customer.telegramAccount %></p>
                <p>
                  <%= new Date(customer.createdAt).toLocaleDateString('en-GB')
                  %>
                </p>
                <p><%= customer.totalOrders %></p>
                <button class="btn btn-green">
                  <i class="ri-table-view"></i> See orders
                </button>
              </div>
            </a>
            <%}%>
          </div>
        </div>
      </div>
    </main>

    <script>
      const URL = "/api/count";
    </script>
    <script src="/js/base.js"></script>
  </body>
</html>
