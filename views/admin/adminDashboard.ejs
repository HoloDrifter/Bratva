    <script>
      const ctx = document.getElementById("levelChart").getContext("2d");

      new Chart(ctx, {
        type: "doughnut",
        data: {
          labels: ["QONTO", "SHINE", "FINOM", "PENNYLANE"],
          datasets: [
            {
              data: [50, 33, 10, 7], // Sample data
              backgroundColor: ["#dcdcdc", "#2E5BFF", "#1951A3", "#D92525"],
              hoverOffset: 5,
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false }, // Hide default legend
          },
          cutout: "70%", // Create a doughnut effect
        },
      });
      async function fetchCustomerCounts() {
        try {
          const response = await fetch("/analytics/customers-count", {
            method: "GET",
            headers: {
              "Content-Type": "application/json",
              Authorization: `Bearer ${localStorage.getItem("token")}`,
            },
          });
          const data = await response.json();

          if (!data.success) {
            console.error("Failed to fetch customer data");
            return;
          }

          // Extract customer data
          const labels = data.data.map((item) => item.date);
          const counts = data.data.map((item) => item.count);

          // Update the total customers count

          // Chart.js Configuration
          const ctx = document
            .getElementById("customersChart")
            .getContext("2d");
          new Chart(ctx, {
            type: "line",
            data: {
              labels: labels,
              datasets: [
                {
                  label: "Customers",
                  data: counts,
                  borderColor: "#1e1e2d",
                  borderWidth: 2,
                  fill: true,
                  backgroundColor: "rgba(30, 30, 45, 0.1)",
                  tension: 0.3,
                  pointRadius: 0,
                  pointHoverRadius: 6,
                  pointBackgroundColor: "#1e1e2d",
                  pointBorderColor: "#fff",
                  pointBorderWidth: 2,
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                tooltip: {
                  enabled: true,
                  mode: "index",
                  intersect: false,
                  backgroundColor: "rgba(0,0,0,0.8)",
                  titleFont: { size: 14, weight: "bold" },
                  bodyFont: { size: 12 },
                  padding: 10,
                  cornerRadius: 6,
                  callbacks: {
                    label: function (context) {
                      return ` New Customers: ${context.raw}`;
                    },
                  },
                },
                legend: {
                  display: false,
                },
              },
              interaction: {
                mode: "nearest",
                intersect: false,
              },
              scales: {
                x: {
                  display: false,
                },
                y: {
                  display: false,
                },
              },
            },
          });
        } catch (error) {
          console.error("Error fetching customer data:", error);
        }
      }

      // Fetch data when the page loads
      fetchCustomerCounts();
    </script>
    <script src="/js/chart.js"></script>
    <script src="/js/base.js"></script>
  </body>
</html>
