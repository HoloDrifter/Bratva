<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bratva Family</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/generalStyles.css" />
    <link rel="stylesheet" href="/styles/dashboard.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  </head>
  <body>
    <header>
      <%- include('partials/nav', { user: user }) %>

      <div class="page_detials container">
        <p>Bratva Family</p>
        <h2>All orders</h2>
      </div>
    </header>

    <!-- Main dashboard -->
    <main class="container dashboard-wrapper">
      <div class="dashboard_top">
        <div class="dashboard_top-left">

          <div class="box-bg chart-box-container">
            <h4 class="heading-4 pad-22">
              Commandes <br />
              <span class="box-count"> <%= orders.length%> </span>
            </h4>
            <div class="chart-box">
              <canvas id="ordersChart"></canvas>
            </div>
          </div>
          <div class="box-bg">
            <h4 class="heading-4"></h4>
          </div>
        </div>
        <div class="box-bg admin-addProduct-box">
          <h4 class="heading-4">
            Voir les produits <br />
            <!-- <span class="box-count" id="p-r-deposits"></span> -->
          </h4>

          <a href="/products">

            <button class="btn btn-black">
              <i class="ri-table-view"></i> Tous les produits
            </button>
          </a>
          <div class="bg-icon">
            <i class="ri-government-line"></i>
          </div>
        </div>
      </div>

      <div class="users-dashboard_bottom container box-bg">
        <div class="users_wrapper">
          <div class="users_top orders_top">
            <p>S.no</p>
            <p>Nom</p>
            <p>Description d'activit√©</p>
            <p>FORME</p>
            <p>code naf</p>
            <p>Capital social</p>
            <p>Purchased on</p>
            <p>Amount Paid</p>
            <p>Download</p>
            <!-- <p>view all orders</p> -->
          </div>
          <div class="user-boxes">
            <% for(let [index, order] of orders.entries()) {%>
              <div class="user-box order-box">
                <p><%= index + 1 %></p>
                
                <% if (order.productId) { %>
                  <h4><%= order.productId.name %></h4>
                  <p><%= order.productId.description %></p>
                  <p><%= order.productId.type %></p>
                  <p><%= order.productId.apeCode %></p>
                  <p><%= order.productId.socialCapital %></p>
                  
                  <p>
                    <%= new Date(order.createdAt).toLocaleDateString('en-GB') %>
                  </p>
                  <p><%= order.totalAmount %></p>
                  <a href=" /thank-you/<%= order._id %>"
                    ><button class="btn btn-bg">View Order</button></a
                  >
                <% } else { %>
                  <p>Product information is unavailable</p>
                <% } %>
                
              
              </div>
            <% } %>
            
          </div>
        </div>
      </div>
    </main>

        <!-- footer -->
        <%- include('partials/footer') %>

        <!--End  footer -->
    <script>
      async function fetchUserOrders() {
        try {
          const response = await fetch("/analytics/user-orders", {
            method: "GET",
            headers: {
              "Content-Type": "application/json",
              Authorization: `Bearer ${localStorage.getItem("token")}`,
            },
          });
          const data = await response.json();

          if (!data.success) {
            console.error("Failed to fetch user orders");
            return;
          }

          // Extract order data
          const labels = data.data.map((item) => item.date);
          const counts = data.data.map((item) => item.count);


          // Chart.js Configuration
          const ctx = document.getElementById("ordersChart").getContext("2d");
          new Chart(ctx, {
            type: "line",
            data: {
              labels: labels,
              datasets: [
                {
                  label: "Orders",
                  data: counts,
                  borderColor: "#1e1e2d",
                  borderWidth: 2,
                  fill: true,
                  backgroundColor: "rgba(30, 30, 45, 0.1)",
                  tension: 0.3,
                  pointRadius: 0,
                  pointHoverRadius: 6,
                  pointBackgroundColor: "#1e1e2d",
                  pointBorderColor: "#fff",
                  pointBorderWidth: 2,
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                tooltip: {
                  enabled: true,
                  mode: "index",
                  intersect: false,
                  backgroundColor: "rgba(0,0,0,0.8)",
                  titleFont: { size: 14, weight: "bold" },
                  bodyFont: { size: 12 },
                  padding: 10,
                  cornerRadius: 6,
                  callbacks: {
                    label: function (context) {
                      return ` Orders: ${context.raw}`;
                    },
                  },
                },
                legend: {
                  display: false,
                },
              },
              interaction: {
                mode: "nearest",
                intersect: false,
              },
              scales: {
                x: {
                  display: false,
                },
                y: {
                  display: false,
                },
              },
            },
          });
        } catch (error) {
          console.error("Error fetching orders data:", error);
        }
      }

      // Fetch data when the page loads
      fetchUserOrders();
    </script>
    <script src="/js/base.js"></script>
  </body>
</html>
